document.querySelector("#review-<%= @review.id %> .new-reply-wrapper").innerHTML = ("<%= j render 'form', path: review_replies_path(@review, @reply), submit_msg: 'Reply' %>");

$('.cancel-reply-btn').click(() => {
  document.querySelector("#review-<%= @review.id %> .new-reply-wrapper").innerHTML = ("");
});

$('#review-<%= @review.id %> .actions input').prop("disabled",true);
$('#review-<%= @review.id %> textarea').on('input', () => {
  $('#review-<%= @review.id %> .actions input').prop("disabled",$('#review-<%= @review.id %> textarea').val() === "");
});
