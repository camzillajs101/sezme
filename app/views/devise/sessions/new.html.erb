<div class="maincontainer">
  <div class="page devise-main-form">
    <h2>Log in</h2>

    <div class="devise-errors"> <!-- IF THIS DOESN'T WORK: move it back into the form tag -->
      <%= flash[:alert] %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => "deviseform"}) do |f| %>
      <div class="field">
        <%= f.text_field :username, autofocus: true, placeholder: "Username" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
