<%= render 'shared/header' %>

<main>
  <div class="page show">
    <%= render 'shared/back' %>

    <%= render @post %>

    <hr>

    <!-- maybe wrap this in a fieldset -->
    <div class="review-form-wrapper new-review-form-wrapper" id="new-review"> <!-- id is for link (posts/:id#new-review) -->
      <%= render 'reviews/new_review' %>
    </div>

    <hr><br>

    <div class="post_reviews list">
      <% if @reviews.count == 0 %>
        No reviews on this post yet. Be the first to tell the world what you think!
      <% else %>
        <div class="reviews-top-bar">
          <h3><%= pluralize(@reviews.count, 'review') %></h3>
          <div class="tabs">
            <%= link_to "Newest", post_path(@post, :sort => "new"), name: "new", class: "cool-link" %>
            <%= link_to "Oldest", post_path(@post, :sort => "old"), name: "old", class: "cool-link" %>
            <%= link_to "Highest Rating", post_path(@post, :sort => "rate_high"), name: "rate_high", class: "cool-link" %>
            <%= link_to "Lowest Rating", post_path(@post, :sort => "rate_low"), name: "rate_low", class: "cool-link" %>
          </div>
        </div>

        <% if params[:exception] && /\A\d+\z/.match(params[:exception]) %>
          <h3>Showing only reviews with <%= params[:exception] %> stars. <%= link_to "See all reviews", @post, class: "link" %></h3>
        <% end %>

        <%= render @reviews %>
      <% end %>
    </div>
  </div>

  <div class="sidebar">
    <h2>Stats for this post</h2>

    <p>Posted on <%= @post.created_at.strftime("%B %-d, %Y") %></p>

    <% for i in 1..5 %>
      <%= link_to post_path(@post, :exception => 6-i) do %>
        <%= 6-i %>-star:
      <% end %>
      <progress value="<%= Post.stats(@post.id,6-i) %>" max="100"></progress> <%= Post.stats(@post.id,6-i) %>%<br>
    <% end %>
  </div>
</main>
