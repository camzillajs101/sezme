<%= link_to "Back", posts_path %>

<h2>New post</h2>
<p>All posts start with a rating of 5 and are averaged over every review.</p>

<%= form_with url: "/posts", model: @post do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :desc, "Description" %><br>
    <%= f.text_area :desc %>
  </div>

  <%= f.hidden_field :rating, value: 50 %>

  <div>
    <%= f.submit %>
  </div>
<% end %>
